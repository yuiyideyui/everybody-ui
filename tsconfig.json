{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    // 关键修复：将 node 改为 bundler，这样 TS 才会正确从 package.json 的 exports 找类型
    "moduleResolution": "bundler", 
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "strict": true,
    "skipLibCheck": true, // 跳过库文件的类型检查，防止第三方库报错
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client"]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue",
    "docs/**/*.ts",
    "docs/**/*.vue"
  ]
}